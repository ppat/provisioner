{
  "variables": {
    "ansible_host": "",
    "base_image": "",
    "version": "",
    "tags": "",
    "ansible_connection": "docker",
    "ansible_roles_path": "/vagrant/roles/"
  },

  "builders": [
    {
      "type": "docker",
      "image": "{{user `base_image`}}",
      "commit": true,
      "pull": false,
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "ansible_env_vars": [
        "ANSIBLE_ROLES_PATH={{user `ansible_roles_path` }}"
      ],
      "user": "root",
      "playbook_file": "./packer-playbook.yml",
      "extra_arguments": [
        "--tags", "{{user `tags`}}",
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "rm -rf /var/lib/apt/lists/*",
        "rm -rf /var/cache/apk/*",
        "rm -rf /tmp/*"
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `ansible_host` }}",
        "tag": "{{user `version`}}",
        "force": true
      }
    ]
  ]
}
